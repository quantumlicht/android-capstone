package guay.philippe.capstone.mutibo;

import guay.philippe.capstone.quiz.repository.Quiz;
import guay.philippe.capstone.quiz.repository.QuizRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class QuizSvc {
	
	@Autowired
	private QuizRepository quizzes;
	
	 @RequestMapping(value="/video", method=RequestMethod.POST)
	 	public @ResponseBody Quiz addVideo(@RequestBody Quiz q){
		 	q.setLikes(0);
		 	quizzes.save(q);
		 	return q;
	 }
}