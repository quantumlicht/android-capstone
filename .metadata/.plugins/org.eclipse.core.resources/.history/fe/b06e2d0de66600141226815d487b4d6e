public class NewQuizFragment extends Fragment implements IApiAccessResponse {
	private mListView;
   @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container,
            Bundle savedInstanceState) {
 
        View rootView = inflater.inflate(R.layout.fragment_new_quiz, container, false);
        
        View mListView = getActivity().findViewById(R.id.new_quiz_list);
        AuthenticateTask authObj = new AuthenticateTask();
    	authObj.delegate = this;
		authObj.execute();
		
        return rootView;
    }
   
	public void postResult(Boolean asyncresult){
	     //This method will get call as soon as your AsyncTask is complete. asyncresult will be your result.
		
	}

	@Override
	public void postResult(JSONObject[] jsonObjects) {
		// TODO Auto-generated method stub
		 if(jsonObjects != null) {
			 List<JSONObjecy> array_list = new ArrayList<JSONObject>();
			 for(int i=0; i< jsonObjects.length; i++){
				 try {
					array_list.add(jsonObjects[i].getString("name"));
				} catch (JSONException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			 }
			 ArrayAdapter<String> arrayAdapter = new ArrayAdapter<String>(
	                 this, 
	                 android.R.,
	                 array_list );
			 
	         
		 }
		
	}

	@Override
