package guay.philippe.capstone.completedquiz.repository;

import java.util.Date;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;

import com.google.common.base.Objects;

@Entity
public class CompletedQuiz {
	
	@Id
	@GeneratedValue(strategy = GenerationType.AUTO)
	private long id;
	
	private long quizId;
	private Date completed_time;
	private int answer;
	private boolean success;
	
	public CompletedQuiz(){
	}
	
	public CompletedQuiz(long quizId, int answer, boolean success){
		this.quizId = quizId;
		this.answer = answer;
		this.success = success;
	}
	
	/**
	 * Two Videos will generate the same hashcode if they have exactly the same
	 * values for their name, author, and creation_time.
	 * 
	 */
	@Override
	public int hashCode() {
		// Google Guava provides great utilities for hashing
		return Objects.hashCode(quizId, completed_time, answer);
	}

	/**
	 * Two Videos are considered equal if they have exactly the same values for
	 * their name, url, and duration.
	 * 
	 */
	@Override
	public boolean equals(Object obj) {
		if (obj instanceof CompletedQuiz) {
			CompletedQuiz other = (CompletedQuiz) obj;
			// Google Guava provides great utilities for equals too!
			return  answer== other.answer
					&& Objects.equal(completed_time, other.completed_time)
					&& quizId == other.quizId;
		} else {
			return false;
		}
	}
	

}
