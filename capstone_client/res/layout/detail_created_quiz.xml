<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:gravity="start"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guay.philippe.capstone.FlowCreateQuizActivity" >

    <TextView
        android:id="@+id/intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill in the Quiz title, the movie set, the difficulty,explanation and select the unrelated movie." />

    <Button
        android:id="@+id/submit_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/justification"
        android:layout_marginBottom="42dp"
        android:text="Update" />

    <EditText
        android:id="@+id/new_quiz_movie4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/movie3"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Movie Title #4"
        android:text="movie4" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/movie3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_quiz_movie4"
        android:layout_alignLeft="@+id/movie2"
        android:ems="10"
        android:hint="Movie Title #3"
        android:text="movie3" />

    <EditText
        android:id="@+id/movie2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/movie3"
        android:layout_alignRight="@+id/intro_text"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Movie Title #2"
        android:text="movie2" />

    <EditText
        android:id="@+id/quiz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/movie1"
        android:layout_below="@+id/intro_text"
        android:ems="10"
        android:hint="Quiz Title"
        android:text="title1" />

    <RadioGroup
        android:id="@+id/unrelated_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/success"
        android:layout_alignTop="@+id/movie1"
        android:gravity="clip_vertical"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="3" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="4" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_create"
        android:layout_alignLeft="@+id/intro_text"
        android:contentDescription="Difficulty"
        android:indeterminate="false"
        android:max="4"
        android:progress="2" />

    <TextView
        android:id="@+id/seekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/success"
        android:layout_centerHorizontal="true"
        android:text="Difficulty: 3" />

    <EditText
        android:id="@+id/justification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/success"
        android:layout_alignLeft="@+id/new_quiz_movie4"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Explanation"
        android:text="explanation" />

    <EditText
        android:id="@+id/movie1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/movie2"
        android:layout_alignLeft="@+id/movie2"
        android:ems="10"
        android:hint="Movie Title #1"
        android:text="movie1" />

    <Button
        android:id="@+id/delete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit_create"
        android:layout_alignBottom="@+id/submit_create"
        android:layout_alignLeft="@+id/success"
        android:text="Delete" />

</RelativeLayout>